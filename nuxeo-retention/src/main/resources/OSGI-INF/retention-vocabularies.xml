<?xml version="1.0"?>
<component name="org.nuxeo.retention.vocabularies" version="1.0">
  <extension target="org.nuxeo.ecm.directory.GenericDirectory" point="directories">

    <directory name="vocabulary" template="true" extends="template-directory">
      <!-- XXX move to default config on master -->
      <schema>vocabulary</schema>
      <idField>id</idField>
    </directory>

    <directory extends="vocabulary" name="RetentionEnd">
      <dataFile>directories/retention_end.csv</dataFile>
    </directory>
    <directory extends="vocabulary" name="RetentionEvent">
      <dataFile>directories/retention_event.csv</dataFile>
    </directory>
  </extension>
</component>
